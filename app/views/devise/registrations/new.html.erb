<div class="row">
  <div class="col-md-4 col-sm-3 col-xs-1"></div>
  <div class="col-md-4 col-sm-6 col-xs-10">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!--this is password length error msg -->
      <!--<%= devise_error_messages! %>--> 
      
      <div class="box_title">SIGN UP</div>
    
      <div class="field input_box">
        <!--<%= f.label :email %><br />-->
        <%= f.email_field :email, autofocus: true, placeholder:"Email" %>
      </div>
      
      <div class="field input_box">
        <!--<%= f.label :nickname %><br />-->
        <%= f.text_field :nickname, autocomplete:"off", placeholder:"Nickname" %>
      </div>
    
      <div class="field input_box">
        <!--<%= f.label :password %>-->
        <!--<% if @minimum_password_length %>-->
        <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <!--<% end %><br />-->
        <%= f.password_field :password, autocomplete: "off", placeholder:"Password (8 characters minimum)" %>
      </div>
    
      <div class="field input_box">
        <!--<%= f.label :password_confirmation %><br />-->
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      
       <!----------- FACEBOOK LOGIN CUSTOM BUTTON ------------->
      <div class="actions">
        <a href="#" onclick="FB.login();">
          <div class="fb_login">SIGN IN with FACEBOOK</div>
        </a>
      </div>
      
      <br/>
      <a href="/">Sign In</a><br/>
      <!--<a href="/users/password/new">Forgot your password?</a><br/>-->
    <% end %>

    <!--<%= render "devise/shared/links" %>-->

  </div>
</div>



